{
  "name": "@hemjs/warp",
  "version": "0.0.0",
  "description": "Simple, composite logger with filtering, formatting, and more",
  "author": "Augustus Kamau",
  "license": "MIT",
  "keywords": [
    "hemjs",
    "warp",
    "logger",
    "logging"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "lint": "eslint \"{src,tests}/**/*.ts\" --fix",
    "test": "jest",
    "test:cov": "jest --coverage",
    "prerelease": "npm run prebuild && npm run build",
    "release": "release-it"
  },
  "devDependencies": {
    "@commitlint/cli": "19.2.1",
    "@commitlint/config-conventional": "19.1.0",
    "@types/jest": "29.5.12",
    "@types/node": "20.12.2",
    "@typescript-eslint/eslint-plugin": "7.4.0",
    "@typescript-eslint/parser": "7.4.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-simple-import-sort": "12.0.0",
    "husky": "9.0.11",
    "jest": "29.7.0",
    "lint-staged": "15.2.2",
    "prettier": "3.2.5",
    "release-it": "17.1.1",
    "rimraf": "5.0.5",
    "ts-jest": "29.1.2",
    "typescript": "5.4.3"
  },
  "homepage": "https://github.com/hemjs/warp#readme",
  "bugs": {
    "url": "https://github.com/hemjs/warp/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hemjs/warp.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
